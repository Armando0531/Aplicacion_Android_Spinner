<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/spinerTipoDeGrado"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/CajaNumeroIngresado"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        android:text="@string/lbl_Convertir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/CajaNumeroIngresado"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="53dp"
        android:text="@string/lb_Igual"
        app:layout_constraintStart_toEndOf="@+id/spinerConvercionA"
        app:layout_constraintTop_toBottomOf="@+id/spinerTipoDeGrado" />

    <Spinner
        android:id="@+id/spinerConvercionA"
        android:layout_width="172dp"
        android:layout_height="57dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/spinerTipoDeGrado" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="@string/lb_A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="351dp"
        android:layout_height="80dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="45dp"
        android:text="Conversor"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cajaResultado"
        android:layout_width="151dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Resultado de la conversiÃ³n"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/spinerTipoDeGrado"
        tools:ignore="EditableContentDescCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>