<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinerTipoDeGrado"
        android:layout_width="185dp"
        android:layout_height="54dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/CajaNumeroIngresado"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/cajaResultado"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/spinerTipoDeGrado" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="51dp"
        android:text="@string/lbl_Convertir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/CajaNumeroIngresado"
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="68dp"
        android:text="@string/lb_Igual"
        app:layout_constraintStart_toEndOf="@+id/spinerConvercionA"
        app:layout_constraintTop_toBottomOf="@+id/spinerTipoDeGrado" />

    <Spinner
        android:id="@+id/spinerConvercionA"
        android:layout_width="186dp"
        android:layout_height="51dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/CajaNumeroIngresado" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="264dp"
        android:text="@string/lb_A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="351dp"
        android:layout_height="80dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="22dp"
        android:text="Conversor"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>